# ========================================
# OHMVISION - PRODUCTION ENVIRONMENT
# Hetzner Cloud Deployment Configuration
# ========================================

# ----------------------------------------
# DOMAIN & NETWORK
# ----------------------------------------
DOMAIN=votre-domaine.com
BACKEND_URL=https://votre-domaine.com
FRONTEND_URL=https://votre-domaine.com

# ----------------------------------------
# DATABASE - PostgreSQL
# ----------------------------------------
POSTGRES_DB=ohmvision
POSTGRES_USER=ohmvision
POSTGRES_PASSWORD=CHANGEZ_MOI_COMPLEXE_32_CHARS

# ----------------------------------------
# REDIS CACHE
# ----------------------------------------
REDIS_PASSWORD=CHANGEZ_MOI_REDIS_PASSWORD

# ----------------------------------------
# SECURITY - JWT & ENCRYPTION
# ----------------------------------------
# Générer avec: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGEZ_MOI_SECRET_KEY_32_CHARS
JWT_SECRET_KEY=CHANGEZ_MOI_JWT_SECRET_32_CHARS

# ----------------------------------------
# EMAIL - SMTP Configuration
# ----------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASSWORD=votre-app-password
SMTP_FROM=noreply@votre-domaine.com

# ----------------------------------------
# STRIPE - Payment Processing
# ----------------------------------------
STRIPE_PUBLIC_KEY=pk_live_XXXXXXXXXX
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXX

# ----------------------------------------
# MONITORING - Sentry (Optional)
# ----------------------------------------
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ----------------------------------------
# PERFORMANCE TUNING
# ----------------------------------------
WORKERS=4
FFMPEG_THREADS=2

# ----------------------------------------
# CORS ORIGINS (comma separated)
# ----------------------------------------
CORS_ORIGINS=https://votre-domaine.com,https://www.votre-domaine.com
