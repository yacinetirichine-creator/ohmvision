# ============================================
# OhmVision Platform - Configuration
# ============================================
# Copiez ce fichier vers .env et modifiez les valeurs

# ===================
# APPLICATION
# ===================
APP_NAME=OhmVision
APP_ENV=production
DEBUG=false

# ===================
# SECRETS (IMPORTANT: Changez ces valeurs!)
# ===================
SECRET_KEY=change-this-to-a-random-string-in-production
JWT_SECRET_KEY=change-this-jwt-secret-in-production

# ===================
# DATABASE
# ===================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ohmvision
DB_USER=ohmvision
DB_PASSWORD=ohmvision_secret_change_me

# Full URL (utilis√©e par l'application)
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ===================
# REDIS
# ===================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ===================
# EMAIL (SMTP)
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@ohmvision.fr

# ===================
# STRIPE (Paiements)
# ===================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_STARTER=price_xxx
STRIPE_PRICE_BUSINESS=price_xxx
STRIPE_PRICE_ENTERPRISE=price_xxx
STRIPE_PRICE_PLATINUM=price_xxx

# ===================
# IA / LLM
# ===================
# Pour l'Agent IA de support
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ===================
# STOCKAGE
# ===================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=104857600

# ===================
# CORS
# ===================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ===================
# MONITORING (Optionnel)
# ===================
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# ===================
# SSL (Production)
# ===================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
